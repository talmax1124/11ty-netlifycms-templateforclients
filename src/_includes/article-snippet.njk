<div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
  <div class="rounded shadow-md h-full">
    <a href="{{ post.url | url }}">
      <img
        class="w-full m-0 rounded-t lazy"
        src="{{ post.data.image }}"
        data-src="{% if post.data.image %}{{
          post.data.image | url
        }}{% else %}{{ '/assets/no-image.svg' | url }}{% endif %}"
        width="960"
        height="500"
        alt="{{ post.data.imageAlt }}"
      />
    </a>
    <div class="px-6 py-5">
      <div class="font-semibold text-lg mb-2">
        <a
          class="text-gray-900 hover:text-blue-700"
          href="{{ post.url | url }}"
          >{{ post.data.title }}</a
        >
      </div>
      <p class="text-gray-700 mb-1" title="Published date">
        {{ post.date | postDate }}
      </p>
      <p class="text-gray-800">
        {{ post.data.description }}
      </p>
      <br>
     
    </div>
  </div>

</div>
